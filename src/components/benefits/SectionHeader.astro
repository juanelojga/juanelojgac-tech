---
interface Props {
  tagline: string;
  heading: string;
  description?: string;
}

const { tagline, heading, description } = Astro.props;
---

<div class="mb-12 flex flex-col items-center gap-4 text-center md:mb-16 lg:mb-20">
  <p class="font-semibold text-[#06020a]">
    {tagline}
  </p>
  <div class="flex max-w-3xl flex-col">
    <h2
      class="font-['Sora'] text-5xl leading-[1.2] font-semibold tracking-[-0.6px] text-[#06020a] md:text-6xl"
    >
      {heading}
    </h2>
    {description && <p class="text-xl leading-[1.5] text-[#06020a]">{description}</p>}
  </div>
</div>
