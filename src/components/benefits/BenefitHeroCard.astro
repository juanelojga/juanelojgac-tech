---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  image: string;
  imageAlt: string;
  tagline?: string;
}

const { title, description, image, imageAlt, tagline } = Astro.props;
---

<div
  class="relative flex h-auto flex-col justify-center overflow-hidden rounded-lg p-6 md:p-8 lg:min-h-[512px]"
>
  <!-- Background with overlay -->
  <div class="absolute inset-0">
    <img src={image} alt={imageAlt} class="h-full w-full object-cover" />
    <div class="absolute inset-0 bg-black/40"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 flex flex-col gap-6">
    <div class="flex flex-col gap-2">
      {tagline && <p class="font-semibold text-white">{tagline}</p>}
      <div class="flex flex-col gap-4">
        <h3
          class="font-['Sora'] text-3xl leading-[1.3] font-semibold tracking-[-0.4px] text-white md:text-4xl"
        >
          {title}
        </h3>
        <p class="text-lg leading-[1.5] text-white">
          {description}
        </p>
      </div>
    </div>
  </div>
</div>
