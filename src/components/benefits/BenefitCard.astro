---
import { Square3Stack3DIcon } from "@heroicons/react/24/outline";

interface Props {
  title: string;
  description: string;
  buttonText: string;
  image: string;
  imageAlt: string;
  tagline?: string;
}

const { title, description, image, imageAlt } = Astro.props;
---

<div class="relative flex flex-col overflow-hidden rounded-lg p-6 md:p-8">
  <!-- Background with overlay -->
  <div class="absolute inset-0">
    <img src={image} alt={imageAlt} class="h-full w-full object-cover" />
    <div class="absolute inset-0 bg-black/40"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 flex flex-1 flex-col justify-between gap-6">
    <div class="flex flex-col gap-4">
      <!-- Icon placeholder -->
      <div
        class="flex h-12 w-12 items-center justify-center rounded-lg bg-white/20 backdrop-blur-sm"
      >
        <Square3Stack3DIcon className="h-6 w-6 text-white" />
      </div>

      <div class="flex flex-col gap-4">
        <h3
          class="font-['Sora'] text-3xl leading-[1.3] font-semibold tracking-[-0.4px] text-white md:text-4xl"
        >
          {title}
        </h3>
        <p class="text-lg leading-[1.5] text-white">
          {description}
        </p>
      </div>
    </div>
  </div>
</div>
