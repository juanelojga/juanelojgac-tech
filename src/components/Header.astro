---
interface Props {
  headline: string;
  description: string;
  primaryButtonText: string;
  primaryButtonHref: string;
  secondaryButtonText: string;
  secondaryButtonHref: string;
  videoSrc: string;
}

const {
  headline,
  description,
  primaryButtonText,
  primaryButtonHref,
  secondaryButtonText,
  secondaryButtonHref,
  videoSrc,
} = Astro.props;
---

<header class="relative flex h-[900px] w-full flex-col items-center gap-20 bg-brand-darkest">
  <div class="relative flex h-full w-full items-start">
    <!-- Left Column: Video Background -->
    <div
      class="relative flex h-full min-h-0 min-w-0 flex-1 flex-col items-start justify-center gap-8 px-20 opacity-50"
    >
      <video
        autoplay
        loop
        muted
        playsinline
        class="absolute left-[-310px] top-0 h-[900px] w-[1600px] object-cover"
        aria-hidden="true"
      >
        <source src={videoSrc} type="video/mp4" />
      </video>
    </div>

    <!-- Right Column: Content -->
    <div
      class="relative flex h-full min-h-0 min-w-0 flex-1 flex-col items-start justify-center gap-8 bg-neutral-darker px-20"
    >
      <div class="flex w-full max-w-[560px] flex-col items-start gap-8">
        <!-- Text Content -->
        <div class="flex w-full flex-col items-start gap-6 text-white">
          <h1 class="w-full font-sora text-6xl font-semibold leading-[1.1] tracking-tight">
            {headline}
          </h1>
          <p class="w-full font-inter text-xl leading-relaxed">
            {description}
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="flex items-start gap-4">
          <a
            href={primaryButtonHref}
            class="inline-flex items-center justify-center gap-2 rounded-full border border-white bg-white px-6 py-1.5 font-inter text-lg font-medium leading-relaxed text-neutral-darkest transition-colors hover:bg-neutral-lightest focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
          >
            {primaryButtonText}
          </a>
          <a
            href={secondaryButtonHref}
            class="inline-flex items-center justify-center gap-2 rounded-full border border-white/20 px-6 py-1.5 font-inter text-lg font-medium leading-relaxed text-white transition-colors hover:border-white/40 hover:bg-white/5 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
          >
            {secondaryButtonText}
          </a>
        </div>
      </div>
    </div>
  </div>
</header>
