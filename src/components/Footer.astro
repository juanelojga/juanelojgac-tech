---
interface Props {
  lang: "en" | "es";
}

const { lang } = Astro.props;

// Import translations
const translations = await import(`../i18n/${lang}.json`);
const t = translations.default.footer;

const companyLinks = [
  { label: t.links.company.about, href: "/" },
  { label: t.links.company.challenges, href: "#challenges" },
  { label: t.links.company.whoWeHelp, href: "#who-we-help" },
  { label: t.links.company.contact, href: "#contact-cta" },
  { label: t.links.company.services, href: "#services" },
];
---

<footer class="bg-[#06020a] px-[5%] py-12 md:py-20 lg:py-20">
  <div class="mx-auto max-w-[1280px]">
    <!-- Main Footer Content Card -->
    <div
      class="flex flex-col gap-8 rounded-lg border border-white/20 bg-[#06020a] p-6 md:flex-row md:gap-16 md:p-12"
    >
      <!-- Left Column: Newsletter & Contact -->
      <div class="flex flex-1 flex-col gap-6 md:gap-8">
        <!-- Newsletter Description -->
        <div class="flex flex-col gap-6">
          <div class="flex flex-col gap-1">
            <p class="text-base leading-[1.5] font-semibold text-white">
              {t.newsletter.description}
            </p>
            <p class="text-base leading-[1.5] font-normal text-white">
              {t.newsletter.location}
            </p>
          </div>

          <!-- Contact Info -->
          <div class="flex flex-col gap-1">
            <p class="text-base leading-[1.5] font-semibold text-white">
              {t.contact.label}
            </p>
            <a
              href={`mailto:${t.contact.email}`}
              class="text-base leading-[1.5] font-normal text-white underline decoration-white underline-offset-2 transition-colors hover:decoration-white/60"
            >
              {t.contact.email}
            </a>
          </div>
        </div>

        <!-- Social Media Links -->
        <div class="flex items-start gap-3">
          <!-- Instagram -->
          <a
            href="https://instagram.com"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={t.social.instagram}
            class="text-white transition-opacity hover:opacity-70"
          >
            <svg
              class="size-6"
              viewBox="0 0 24 24"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M11.999 7.377a4.623 4.623 0 1 0 0 9.248 4.623 4.623 0 0 0 0-9.248zm0 7.627a3.004 3.004 0 1 1 0-6.008 3.004 3.004 0 0 1 0 6.008z"
              ></path>
              <circle cx="16.806" cy="7.207" r="1.078"></circle>
              <path
                d="M20.533 6.111A4.605 4.605 0 0 0 17.9 3.479a6.606 6.606 0 0 0-2.186-.42c-.963-.042-1.268-.054-3.71-.054s-2.755 0-3.71.054a6.554 6.554 0 0 0-2.184.42 4.6 4.6 0 0 0-2.633 2.632 6.585 6.585 0 0 0-.419 2.186c-.043.962-.056 1.267-.056 3.71 0 2.442 0 2.753.056 3.71.015.748.156 1.486.419 2.187a4.61 4.61 0 0 0 2.634 2.632 6.584 6.584 0 0 0 2.185.45c.963.042 1.268.055 3.71.055s2.755 0 3.71-.055a6.615 6.615 0 0 0 2.186-.419 4.613 4.613 0 0 0 2.633-2.633c.263-.7.404-1.438.419-2.186.043-.962.056-1.267.056-3.71s0-2.753-.056-3.71a6.581 6.581 0 0 0-.421-2.217zm-1.218 9.532a5.043 5.043 0 0 1-.311 1.688 2.987 2.987 0 0 1-1.712 1.711 4.985 4.985 0 0 1-1.67.311c-.95.044-1.218.055-3.654.055-2.438 0-2.687 0-3.655-.055a4.96 4.96 0 0 1-1.669-.311 2.985 2.985 0 0 1-1.719-1.711 5.08 5.08 0 0 1-.311-1.669c-.043-.95-.053-1.218-.053-3.654 0-2.437 0-2.686.053-3.655a5.038 5.038 0 0 1 .311-1.687c.305-.789.93-1.41 1.719-1.712a5.01 5.01 0 0 1 1.669-.311c.951-.043 1.218-.055 3.655-.055s2.687 0 3.654.055a4.96 4.96 0 0 1 1.67.311 2.991 2.991 0 0 1 1.712 1.712 5.08 5.08 0 0 1 .311 1.669c.043.951.054 1.218.054 3.655 0 2.436 0 2.698-.043 3.654h-.011z"
              ></path>
            </svg>
          </a>

          <!-- X (Twitter) -->
          <a
            href="https://twitter.com"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={t.social.twitter}
            class="text-white transition-opacity hover:opacity-70"
          >
            <svg
              class="size-6"
              viewBox="0 0 512 512"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z"
              ></path>
            </svg>
          </a>

          <!-- LinkedIn -->
          <a
            href="https://www.linkedin.com/company/juanelojgac-tech-llc/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={t.social.linkedin}
            class="text-white transition-opacity hover:opacity-70"
          >
            <svg
              class="size-6"
              viewBox="0 0 24 24"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M20 3H4a1 1 0 0 0-1 1v16a1 1 0 0 0 1 1h16a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1zM8.339 18.337H5.667v-8.59h2.672v8.59zM7.003 8.574a1.548 1.548 0 1 1 0-3.096 1.548 1.548 0 0 1 0 3.096zm11.335 9.763h-2.669V14.16c0-.996-.018-2.277-1.388-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248h-2.667v-8.59h2.56v1.174h.037c.355-.675 1.227-1.387 2.524-1.387 2.704 0 3.203 1.778 3.203 4.092v4.71z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Right Column: Links (Two Columns on Desktop) -->
      <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 sm:gap-8 md:max-w-[400px] md:gap-8">
        <!-- Company Links -->
        <nav aria-label={t.links.label}>
          <ul class="flex flex-col">
            {
              companyLinks.map(({ label, href }) => (
                <li class="px-0 py-2">
                  <a
                    href={href}
                    class="text-base leading-[1.5] font-semibold text-white transition-opacity hover:opacity-70"
                  >
                    {label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>
    </div>

    <!-- Copyright Section -->
    <div class="flex items-center justify-center pt-6 pb-4 md:pt-8 md:pb-0">
      <p class="text-center text-base leading-[1.5] font-normal text-white">
        {t.copyright}
      </p>
    </div>
  </div>
</footer>
