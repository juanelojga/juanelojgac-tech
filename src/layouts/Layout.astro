---
import { detectLanguageFromHeader, type Language } from "../lib/i18n";

interface Props {
  title?: string;
  description?: string;
  lang?: Language;
}

const { title = "JuaneloJGAC Tech", description, lang: propLang } = Astro.props;

// Detect language from Accept-Language header if not explicitly provided
const acceptLanguageHeader = Astro.request.headers.get("accept-language");
const langCode: Language = propLang || detectLanguageFromHeader(acceptLanguageHeader);
---

<!doctype html>
<html lang={langCode}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    <title>{title}</title>

    <!-- Google Fonts - Sora and Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Sora:wght@100..800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot lang={langCode} />
  </body>
</html>

<script>
  import "../styles/tailwind.css";
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Inter", sans-serif; /* Set Inter as default font */
  }
</style>
