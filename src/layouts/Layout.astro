---
import Seo from "../components/Seo.astro";
import enTranslations from "../i18n/en.json";
import esTranslations from "../i18n/es.json";
import { detectLanguageFromHeader, type Language } from "../lib/i18n";

interface Props {
  title?: string;
  description?: string;
  lang?: Language;
  image?: string;
}

const { title, description, lang: propLang, image } = Astro.props;

// Detect language from Accept-Language header if not explicitly provided
const acceptLanguageHeader = Astro.request.headers.get("accept-language");
const langCode: Language = propLang || detectLanguageFromHeader(acceptLanguageHeader);

// Get default SEO values from translations
const translations = langCode === "en" ? enTranslations : esTranslations;
const seoDefaults = translations.seo;

// Use provided values or fall back to defaults
const pageTitle = title || seoDefaults.defaultTitle;
const pageDescription = description || seoDefaults.defaultDescription;

// Get current URL path
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang={langCode}>
  <head>
    <Seo
      title={pageTitle}
      description={pageDescription}
      url={currentPath}
      lang={langCode}
      image={image}
    />

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts - Sora and Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Sora:wght@100..800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot lang={langCode} />
  </body>
</html>

<script>
  import "../styles/tailwind.css";
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Inter", sans-serif; /* Set Inter as default font */
  }
</style>
