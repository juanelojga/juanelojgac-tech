{
  "name": "juanelojgac-tech",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test --config=tests/playwright.config.ts",
    "test:e2e:headed": "playwright test --config=tests/playwright.config.ts --headed",
    "test:e2e:ui": "playwright test --config=tests/playwright.config.ts --ui",
    "test:e2e:debug": "playwright test --config=tests/playwright.config.ts --debug",
    "test:e2e:chromium": "playwright test --config=tests/playwright.config.ts --project=chromium",
    "test:e2e:firefox": "playwright test --config=tests/playwright.config.ts --project=firefox",
    "test:e2e:webkit": "playwright test --config=tests/playwright.config.ts --project=webkit",
    "test:accessibility": "playwright test --config=tests/playwright.config.ts --grep accessibility",
    "test:visual": "playwright test --config=tests/playwright.config.ts --grep @visual",
    "test:pages": "playwright test tests/pages/ --config=tests/playwright.config.ts",
    "test:components": "playwright test tests/ui/ --config=tests/playwright.config.ts",
    "test:watch": "node tests/mcp/watcher.js",
    "test:report": "playwright show-report reports/playwright-html",
    "test:all": "npm run test && npm run test:e2e",
    "test:deployment-gate": "node tests/mcp/deployment-gate.js",
    "pre-deploy": "./tests/mcp/pre-deploy-hook.sh",
    "pre-commit-tests": "node tests/mcp/pre-commit-hook.js"
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.4",
    "astro": "^5.15.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.553.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/ui": "^4.0.8",
    "chokidar": "^4.0.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "playwright-lighthouse": "^4.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^3.4.18",
    "vitest": "^4.0.8"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
